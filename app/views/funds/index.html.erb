  <div class="center-horizontal block">
    <h1>Top Funds</h1>
    <ul>
    <% @top_funds.each do |fund| %>
      <li><%= link_to "#{fund.symbol}", fund_path(fund), class: 'view-fund', :data => { 'id' => "#{fund.id}"} %>
        <div id="fund-<%= fund.id %>">
        </div>
    <% end %>
    </ul>
    <br>
  </div>

  <br>
  <div class="center-horizontal block">
    <h1>All Funds</h1>
    <ul>
    <% @funds.each do |fund| %>
      <li><%= link_to "#{fund.symbol}", fund_path(fund) %></li>
      <% end %>
    </ul>
    <br><br>
  </div>
</div>

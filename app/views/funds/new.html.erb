<h1>Create A New Fund:</h1>

<%=form_for([@user, @fund]) do |f|%>

  <%=f.label :name, "Name:" %>
  <%=f.text_field :name %><br>

  <%=f.label :industry, "Industry:"%>
  <%=f.text_field :industry %><br>

  <%=f.label :strategy, "Strategy:"%>
  <%=f.text_area :strategy %><br>

  <h3>Add Your First Investment:</h3>
  <%=f.fields_for :new_investment, @fund.investments.build do |investment_field|%>
    <%=investment_field.label :symbol, "Symbol:"%>
    <%=investment_field.text_field :symbol %><br>
  <%end%>

  <h3>Or Select An Existing investment:</h3>

  <%=f.label :investments, "Select investment:"%>
  <%=f.collection_select :investments, Investment.all, :symbol, :symbol, include_blank: true%><br><br>

  <%=f.submit %><br>
<%end%>

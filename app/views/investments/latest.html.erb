<div class="center-horizontal block">
<h1>Latest Investments:</h1>
<table style="width:100%">
  <tr>
    <th align="left">Fund:</th>
    <th align="left">Quantity:</th>
    <th align="left">Price:</th>
    <th align="left">Created By:</th>
    <th align="left">Date Created:</th>
  </tr>
  <% @latest_investments.each do |investment| %>
    <tr>
      <td><%= investment.fund.symbol%></td>
      <td><%= investment.quantity%></td>
      <td><%= investment.price%></td>
      <td><%= investment.user.username %></td>
      <td><%= investment.created_at.strftime("%m/%d/%Y") %></td>
        <tr>
    <% end %>
</table>
<br>
</div>

<div class="center-horizontal block">
  <p id="load_investments"><%= link_to "All Investments", investments_path %></p>
</div>

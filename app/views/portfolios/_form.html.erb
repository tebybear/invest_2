<%=form_for @portfolio do |f|%>
  <%= f.hidden_field :user_id %>

  <%=f.label :name, "Portfolio Name:" %><br>
  <%=f.text_field :name %><br>

  <%=f.label :strategy, "Portfolio Strategy:"%><br>
  <%=f.text_field :strategy %><br>

  <%= fields_for :funds, @portfolio.funds.build do |funds_fields| %>
    <%=funds_fields.label :symbol, "Symbol:" %>
    <%=funds_fields.text_field :symbol %>

    <%=funds_fields.label :type, "Type:"%>
    <%=funds_fields.text_field :type %>

  <%= end %>

  <%=f.submit %><br>
 <%end%>

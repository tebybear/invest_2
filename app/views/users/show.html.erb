<h1><%= @user.username %></h1>

<h3>Funds:</h3>
<div>
  <% @user.funds.each do |fund| %>
    <p>Name:<%= fund.name%></p>
    <p>Industry:<%= fund.industry%></p>
    <p>Strategy:<%= fund.strategy%></p>
      <ul>
      <% fund.investments.each do |investment| %>
        <li><%= investment.symbol %></li>
      <% end %>
      </ul>
      <br>
    <% end %>
</div>

<br>
<%= link_to "New Fund", new_user_fund_path(@user) %><br>
